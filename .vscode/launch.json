{
   "version": "0.2.0",
   "configurations": [
    {
        "name": "Chrome Portal",
        "request": "launch",
        "type": "pwa-chrome",
        "url": "http://localhost:4200",
        "webRoot": "${workspaceFolder}/public",
        "sourceMaps": true,
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "name": "Launch Microsoft Edge and open the Edge DevTools",
        "request": "launch",
        "type": "vscode-edge-devtools.debug",
        "url": "http://localhost:4200",
        "webRoot": "${workspaceFolder}/public",
        "sourceMaps": true,
        "skipFiles": [
            "<node_internals>/**"
        ],
    }
]
}